
# OpenSSL configuration file.
#
 
# Establish working directory.
 
dir					= .
 
[ ca ]
default_ca				= CA_default
 
[ CA_default ]
serial					= $dir/
database				= $dir/crl.txt
new_certs_dir				= $dir/
certificate				= $dir/root.crt
private_key				= $dir/root.key.pem
default_days				= 365
default_md				= md5
preserve				= no
email_in_dn				= no
nameopt					= default_ca
certopt					= default_ca
policy					= policy_match
 
[ policy_match ]
countryName				= match
stateOrProvinceName			= match
organizationName			= match
organizationalUnitName			= optional
commonName				= supplied
emailAddress				= optional
 
[ req ]
default_bits				= 4096			# Size of keys
default_keyfile				= key.crt.pem		# name of generated keys
default_md				= md5				# message digest algorithm
string_mask				= nombstr		# permitted characters
distinguished_name			= req_distinguished_name
req_extensions				= v3_req
 
[ req_distinguished_name ]
# Variable name				Prompt string
#-------------------------	  ----------------------------------
0.organizationName			= Harokopoio
organizationalUnitName			= Decurity Class
emailAddress				= it21018@hua.gr
emailAddress_max			= 40
localityName				= Athens
stateOrProvinceName			= Attiki
countryName				= GR
countryName_min				= 2
countryName_max				= 2
commonName				= The Team
commonName_max				= 64
 
# Default values for the above, for consistency and less typing.
# Variable name				Value
#------------------------	  ------------------------------
0.organizationName_default		= Harokopoio
localityName_default			= Athens
stateOrProvinceName_default		= Attiki
countryName_default			= GR
 
[ v3_ca ]
basicConstraints			= CA:TRUE
subjectKeyIdentifier			= hash
authorityKeyIdentifier			= keyid:always,issuer:always
 
[ v3_req ]
basicConstraints			= CA:FALSE
subjectKeyIdentifier			= hash
